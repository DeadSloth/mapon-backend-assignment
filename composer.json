{
    "name": "mapon/fuel-api-assignment",
    "description": "Fuel Transaction API - Take-Home Assignment",
    "type": "project",
    "require": {
        "php": ">=8.2",
        "vlucas/phpdotenv": "^5.6",
      "ext-pdo": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        },
        "classmap": [
            "src/Rpc/Section/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "setup": "php bin/setup.php",
        "serve": "php -S localhost:8000 -t public"
    }
}
